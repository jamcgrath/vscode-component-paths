{
  "name": "component-reference-finder",
  "displayName": "Component Reference Finder",
  "description": "Find all references to a component and copies the path to your clipboard",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.findAllComponentReferences",
        "title": "Find All Component References"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.findAllComponentReferences",
          "when": "resourceExtname =~ /\\.(js|jsx|ts|tsx|vue)$/",
          "group": "navigation"
        }
      ]
    },
    "commands": [{
      "command": "component-reference-finder.helloWorld",
      "title": "Hello World"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.23.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
